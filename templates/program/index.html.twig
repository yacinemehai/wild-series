{% extends 'base.html.twig'%}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries</h1>
    <br>
    <div class="form-search d-flex justify-content-center">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Rechercher</button>
        {{ form_end(form) }}
    </div>
    <br>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.categoryId.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { program: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
